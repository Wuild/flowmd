{
  "name": "flowmd",
  "version": "1.0.0",
  "description": "FlowMD - A modern WYSIWYG Markdown Editor built with ProseMirror",
  "main": "dist/flowmd.umd.js",
  "module": "dist/flowmd.esm.js",
  "unpkg": "dist/flowmd.umd.js",
  "types": "dist/types/lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/flowmd.esm.js",
      "browser": "./dist/flowmd.umd.js"
    },
    "./flowmd.css": "./dist/flowmd.css"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "markdown",
    "editor",
    "wysiwyg",
    "prosemirror",
    "rich-text",
    "text-editor",
    "markdown-editor",
    "flowmd"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wuild/flowmd.git"
  },
  "bugs": {
    "url": "https://github.com/wuild/flowmd/issues"
  },
  "homepage": "https://github.com/wuild/flowmd#readme",
  "license": "MIT",
  "author": {
    "name": "Wuild",
    "email": "wuild@voracious.se"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "npm run build:lib && npm run build:umd && npm run build:esm",
    "build:lib": "npm run build:types && webpack --mode production --env library",
    "build:demo": "webpack --mode production",
    "build:types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --outDir dist/types",
    "build:umd": "webpack --mode production --env library --env format=umd",
    "build:esm": "webpack --mode production --env library --env format=esm",
    "watch": "webpack --mode development --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.{ts,js,scss,css,json}",
    "format:check": "prettier --check src/**/*.{ts,js,scss,css,json}",
    "code-quality": "npm run lint:check && npm run format:check && npm run type-check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "@types/jest": "^29.5.0",
    "@types/markdown-it": "^13.0.9",
    "@types/markdown-it-container": "^2.0.10",
    "@types/node": "^20.4.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.44.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.5.1",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.0",
    "prettier": "^3.0.0",
    "sass": "^1.63.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "markdown-it": "^14.1.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-container": "^4.0.0",
    "markdown-it-deflist": "^3.0.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-ins": "^4.0.0",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-sub": "^2.0.0",
    "markdown-it-sup": "^2.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "markdown-it-task-lists": "^2.1.1",
    "prosemirror-commands": "^1.5.2",
    "prosemirror-dropcursor": "^1.8.1",
    "prosemirror-gapcursor": "^1.3.2",
    "prosemirror-history": "^1.3.2",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-markdown": "^1.10.1",
    "prosemirror-model": "^1.19.2",
    "prosemirror-schema-basic": "^1.2.2",
    "prosemirror-schema-list": "^1.3.0",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.31.6"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
